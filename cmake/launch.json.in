{
    "version": "0.2.0",
    "configurations": [
    ${DEBUG_CONFIGURATIONS}
        {
            "name": "Tests",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${CMAKE_SOURCE_DIR}",
            "environment": [
                {
                    "name":"PATH",
                    "value":"${DEBUG_PATH}"
                }                    
            ],
            "externalConsole": true,
                    "program": "${CMAKE_BINARY_DIR}/tests${CMAKE_EXECUTABLE_SUFFIX}",
                    "miDebuggerPath": "${GDB_EXECUTABLE}",
                    "MIMode": "gdb",
                    "setupCommands": [
                        {
                            "description": "Enable pretty-printing for gdb",
                            "text": "-enable-pretty-printing",
                            "ignoreFailures": true
                        }
                        ]
        },
    ]
}
